<h2>New Review</h2>
<%= render "layouts/errors", :object => @review %>
<%= form_for [@product, @review] do |f| %>
  <%= f.label :content %>
  <%= f.text_area :content %>
  <%= f.label :rating %>
  <%= f.number_field :rating %>
  <%= f.label :author %>
  <%= f.text_field :author %>
  <%= f.submit  %>
<% end %>
